---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;

const baseStyles = `
  inline-block 
  px-4 py-2 
  font-semibold tracking-wide text-center
  text-fsp-dark
  transition-colors duration-200 
  hover:text-fsp-green
`;

const computedClass = [baseStyles, className];
---

<a href={href} class:list={computedClass}>
  <slot />
</a>
