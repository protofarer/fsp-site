---
import SITE_MAP from '../constants/site-map.ts'
import ButtonLink from '../components/ButtonLink.astro'
---
<div class="bg-gray-800 space-y-12 py-8 md:py-12 flex flex-col items-center">
  <div class="text-lg md:text-2xl tracking-wider text-center text-white font-bold italic">
    FRONTIER SPORTS PERFORMANCE
  </div>
  <h1 class="text-2xl md:text-4xl md:max-w-3xl tracking-wide font-bold text-center text-white">
    UNLOCK YOUR POTENTIAL IN STRENGTH AND ATHLETICS
  </h1>
  <div class="w-full pt-8 flex gap-6 md:gap-10 flex-nowrap justify-center items-center">
    <ButtonLink
    href={SITE_MAP.services}
    variant='filled'
    color='light'
    class="font-bold w-2/5 md:w-auto md:px-6 md:py-3"
    >
      Start Training
    </ButtonLink>
    <ButtonLink
    href={SITE_MAP.about}
    variant='outline'
    color='light'
    class="font-bold w-2/5 md:w-auto md:px-6 md:py-3"
    >
      Learn More
    </ButtonLink>
  </div>
</div>
