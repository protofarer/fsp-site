---
interface Props {
	href: string;
	className?: string;
	external?: boolean;
}

const { href, className = '', external = false } = Astro.props
const baseStyles = "inline-block px-4 py-2 font-medium transition-colors duration-200 rounded-lg hover:bg-blue-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 text-green-200";
---
<a 
  href={href} 
  class:list={[baseStyles, className]}
  {...external ? {
	  target: "_blank",
	  rel: "noopener noreferrer"
	  } : {}}
  >
  <slot />
  {external && (
    <span class="inline-block ml-1">
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        class="w-4 h-4 inline" 
        viewBox="0 0 20 20" 
        fill="currentColor"
      >
        <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
        <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
      </svg>
    </span>
  )}
</a>
