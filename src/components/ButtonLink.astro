---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className = ''} = Astro.props;

const buttonClass = 'inline-block px-4 py-2 bg-gray-800 text-white rounded-md hover:bg-gray-600 transition-colors'
const computedClass = [className, buttonClass];
---

<a
  href={href}
  class:list={computedClass}
>
  <slot />
</a>
