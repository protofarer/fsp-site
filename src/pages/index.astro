---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import CustomLink from '../components/CustomLink.astro';
import IconPhone from '../components/IconPhone.astro';
import IconEmail from '../components/IconEmail.astro';
import LandingHero from '../components/LandingHero.astro';
import ServiceBlurbCard from '../components/home/ServiceBlurbCard.astro'
import CoachBlurbCard from '../components/home/CoachBlurbCard.astro'
import { formatPhoneNumber } from '../utils';
import { EMAIL, PHONE } from '../constants/info';

type Service = CollectionEntry<'services'>
const allServices = await getCollection('services');

type Coach = CollectionEntry<'coaches'>
const allCoaches = await getCollection('coaches');

const classProgramTitle = 'text-lg md:text-xl font-bold text-center';
const inputClasses =
  'bg-white w-full px-3 py-2 border border-b-4 border-slate-200 focus:border-blue-500 transition-colors duration-200 outline-none placeholder:text-gray-400 text-slate-700';
const classTextArea = 'min-h-[120px] resize-y';
const labelClasses = 'text-slate-700 font-bold';
---

<BaseLayout>
  <LandingHero />
  <Section id="welcome-text" background="light" class="py-12">
    <div class:list={['py-6 md:py-8']}>
      <div class="flex justify-center">
        <div
          class="px-4 space-y-6 md:space-y-10 text-lg md:text-xl md:max-w-4xl text-slate-700 leading-relaxed text-center"
        >
          <p>At the heart of Frontier Sports Performance is a simple truth:</p>
          <p class="italic tracking-wide">
            Greatness begins with a foundation of physical and mental resilience
          </p>
          <p>
            Founded by Steven Baron and Jonathan Locher, Frontier Sports
            Performance is the culmination of a lifelong journey in athletics,
            fueled by lessons learned on and off the field.
          </p>
        </div>
      </div>
    </div>
  </Section>
  <Section id="services" title="Services">
    <ul
      class="grid md:grid-cols-2 xl:grid-cols-3 gap-8 md:gap-12 py-4 px-2 md:p-6 text-center"
    >
    {allServices.map((service: Service) => (
      <li class="flex">
        <ServiceBlurbCard service={service} />
      </li>
    ))}
    </ul>
  </Section>
  <Section id="coaches" title="Coaches" background="light">
    <div class="grid grid-cols-1 md:grid-cols-2 py-4 px-2 md:p-6 gap-8">
    {allCoaches.map((coach: Coach) => (
        <CoachBlurbCard coach={coach} />
    ))}
    </div>
  </Section>
  <Section id="contact" title="Contact" spacing="lg">
    <div class="px-4 space-y-4">
      <p class="text-center mt-3">
        Get in touch and we will reach out to you as soon as possible.
      </p>
      <div class="flex justify-center">
        <div class="flex flex-col space-y-2">
          <div class="flex items-center space-x-3">
            <IconEmail />
            <CustomLink href=`mailto:${EMAIL}`>{EMAIL}</CustomLink>
          </div>
          <div class="flex items-center space-x-3">
            <IconPhone />
            <CustomLink href=`phone:${PHONE}`
              >{formatPhoneNumber(PHONE)}</CustomLink
            >
          </div>
        </div>
      </div>
      <form name="contact" class="max-w-xl mx-auto py-4 space-y-6" data-netlify="true">
        <div class="space-y-4">
          <div class="flex flex-col space-y-2">
            <label for="name" class={labelClasses}>Name</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="John Doe"
              class={inputClasses}
            />
          </div>
          <div class="flex flex-col space-y-2">
            <label for="email" class={labelClasses}>Email</label>
            <input
              type="text"
              id="email"
              name="email"
              placeholder="john@example.com"
              class={inputClasses}
            />
          </div>
          <div class="flex flex-col space-y-2">
            <label for="subject" class={labelClasses}>Subject</label>
            <input
              type="text"
              id="subject"
              name="subject"
              placeholder="How can we help?"
              class={inputClasses}
            />
          </div>
          <div class="flex flex-col space-y-2">
            <label for="message" class={labelClasses}>Message</label>
            <textarea
              id="message"
              name="message"
              placeholder="Your message here..."
              class:list={[inputClasses, classTextArea]}></textarea>
          </div>
          <button
            type="submit"
            class="w-full px-6 py-3 bg-slate-800 text-white rounded-lg hover:bg-slate-800 transition-colors duration-200"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>
  </Section>
</BaseLayout>
