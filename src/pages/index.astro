---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import CustomLink from '../components/CustomLink.astro';
import IconPhone from '../components/IconPhone.astro';
import IconEmail from '../components/IconEmail.astro';
import LandingHero from '../components/LandingHero.astro';
import SITE_MAP from '../constants/site-map';
import { EMAIL, PHONE } from '../constants/info';
import { formatPhoneNumber } from '../utils';
import ButtonLink from '../components/ButtonLink.astro';

const classTextBase = 'text-gray-700 leading-relaxed text-base';
const classCard = 'p-4 md:p-6 md:rounded-lg md:bg-white md:shadow-sm';
const classProgramTypography = 'space-y-4' + ' ' + classTextBase;
const classProgramTitle = 'text-lg font-semibold text-gray-900 text-center';
const classInnerList = 'space-y-2 list-disc pl-10';

const inputClasses =
  'bg-white w-full px-3 py-2 border-b-2 border-gray-200 focus:border-blue-500 transition-colors duration-200 outline-none placeholder:text-gray-400 text-gray-700';
const classTextArea = 'min-h-[120px] resize-y';
const labelClasses = 'text-base text-gray-800 font-bold';
---

<BaseLayout>
  <LandingHero />
  <Section id="welcome-text" background="light" class="py-12">
    <div class:list={['space-y-12', 'py-12 md:py-20']}>
      <div class="space-y-4 flex justify-center">
        <div
          class="text-lg md:text-2xl md:max-w-4xl px-4 text-gray-700 leading-relaxed text-center space-y-4"
        >
          <p class="italic">
            At the heart of Frontier Sports Performance is a simple truth:
            greatness begins with a foundation of physical and mental
            resilience. Founded by Steven Baron and Jonathan Locher, Frontier
            Sports Performance is the culmination of a lifelong journey in
            athletics, fueled by lessons learned on and off the field.
          </p>
        </div>
      </div>
    </div>
  </Section>
  <Section id="services" title="Services">
    <ul class="grid md:grid-cols-2 xl:grid-cols-3 gap-8 md:gap-12 p-4 md:p-6 text-center">
      <li class:list={[classCard, 'space-y-4']}>
        <h3 class={classProgramTitle}>Hitting</h3>
        <p>
          Take your hitting to the next level with progressive, 1-hour
          personalized hitting sessions.
        </p>
        <div class="flex justify-center items-center">
          <ButtonLink href={SITE_MAP.serviceHitting}>Learn More</ButtonLink>
        </div>
      </li>
      <li class:list={[classCard, 'space-y-4']}>
        <h3 class={classProgramTitle}>Catching</h3>
        <p>
          Elevate your game behind the plate with 1-hour customized catching
          sessions focused on the three core skills:
        </p>
        <div class="flex justify-center items-center">
          <ButtonLink href={SITE_MAP.serviceCatching}>Learn More</ButtonLink>
        </div>
      </li>
      <li class:list={[classCard, 'space-y-4']}>
        <h3 class={classProgramTitle}>Pitching</h3>
        <p>
          Take Your Pitching to the Next Level with Progressive, 1-Hour
          Personalized Pitching Sessions
        </p>
        <div class="flex justify-center items-center">
          <ButtonLink href={SITE_MAP.servicePitching}>Learn More</ButtonLink>
        </div>
      </li>
    </ul>
  </Section>
  <Section id="coaches" title="Coaches" background="light">
    <div class="grid md:grid-cols-1 gap-8">
      <div class:list={[classCard]}>
        <h3 class="text-xl font-semibold text-center">Steven Baron</h3>
        <p class={classTextBase}>
          Steven Baron is a former professional baseball catcher with a 12-year
          career in the MLB and MiLB. Baron signed to play baseball at Duke
          University but instead was selected by the Seattle Mariners with the
          33rd overall pick in the 2009 MLB Draft. <CustomLink
            href={SITE_MAP.coachBaron}
            class="ml-2 text-blue-600 hover:text-blue-800 hover:underline"
            >Read More</CustomLink
          >
        </p>
      </div>
      <div class:list={[classCard]}>
        <h3 class="text-xl font-semibold text-center">Jonny Locher</h3>
        <p class={classTextBase}>
          Jonny has successfully coached at youth, High School and Divison 1
          college levels. He is the head coach at Highline HS, and won the
          league championship during his first season. Jonny has also coached
          the Anchorage Glacier Pilots in the Alaska Baseball League, a Division
          1 college summer league.
          <CustomLink
            href={SITE_MAP.coachLocher}
            class="ml-2 text-blue-600 hover:text-blue-800 hover:underline"
            >Read More</CustomLink
          >
        </p>
      </div>
    </div>
  </Section>
  <Section id="contact" title="Contact" spacing="lg">
    <div class="px-4 space-y-4">
      <p class="text-center text-base">
        Get in touch and we will reach out to you as soon as possible.
      </p>
      <div class="flex justify-center">
        <div class="flex flex-col space-y-2">
          <div class="flex items-center space-x-3">
            <IconEmail />
            <CustomLink href=`mailto:${EMAIL}`>{EMAIL}</CustomLink>
          </div>
          <div class="flex items-center space-x-3">
            <IconPhone />
            <CustomLink href=`phone:${PHONE}`
              >{formatPhoneNumber(PHONE)}</CustomLink
            >
          </div>
        </div>
      </div>
      <form class="max-w-xl mx-auto py-4 space-y-6">
        <div class="space-y-4">
          <div class="flex flex-col space-y-2">
            <label for="name" class={labelClasses}>Name</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="John Doe"
              class={inputClasses}
            />
          </div>
          <div class="flex flex-col space-y-2">
            <label for="email" class={labelClasses}>Email</label>
            <input
              type="text"
              id="email"
              name="email"
              placeholder="john@example.com"
              class={inputClasses}
            />
          </div>
          <div class="flex flex-col space-y-2">
            <label for="subject" class={labelClasses}>Subject</label>
            <input
              type="text"
              id="subject"
              name="subject"
              placeholder="How can we help?"
              class={inputClasses}
            />
          </div>
          <div class="flex flex-col space-y-2">
            <label for="message" class={labelClasses}>Message</label>
            <textarea
              id="message"
              name="message"
              placeholder="Your message here..."
              class:list={[inputClasses, classTextArea]}></textarea>
          </div>
          <button
            type="submit"
            class="w-full px-6 py-3 bg-slate-800 text-white rounded-lg hover:bg-gray-800 transition-colors duration-200"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>
  </Section>
</BaseLayout>
