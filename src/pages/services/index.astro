---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageTitle from '../../components/PageTitle.astro';
import ButtonLink from '../../components/ButtonLink.astro';
import ServiceCard from './_ServiceCard.astro';
import SITE_MAP from '../../constants/site-map';

type Service = CollectionEntry<'services'>
const allServices = await getCollection('services');
---

<BaseLayout>
  <div class="flex flex-col items-center px-2 md:px-6 gap-5 md:gap-8 mt-6">
    <div class="space-y-1 md:space-y-3">
      <PageTitle> Services </PageTitle>
      <p class="text-md md:text-xl text-slate-600 text-center">
        Elevate Your Game with Professional, Personalized Training
      </p>
      <div class="flex justify-center pt-3">
        <ButtonLink href={SITE_MAP.contact}>Contact Us</ButtonLink>
      </div>
    </div>
      {
        allServices.map((service: Service) => (
          <ServiceCard service={service} />
        ))
      }
  </div>
</BaseLayout>
